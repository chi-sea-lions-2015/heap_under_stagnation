<% if @user %>
  <%= form_tag("/logout", :controller=>"users", :method=>"delete") do %>
    <%= submit_tag "Logout" %>
  <% end %>
<% else %>
  <%= form_tag("/signup", :controller=>"users", :method=>"get") do %>
    <%= submit_tag "Sign Up" %>
  <% end %>
  <%= form_tag("/login", :controller=>"users", :method=>"get") do %>
    <%= submit_tag "Login" %>
  <% end %>
<% end %>

<h1>All Questions</h1>

<% @questions.each do |question| %>
<h3><%= link_to("#{question.title}",question_path(question))%></h3>
<% end %>

<h2><%= link_to("Create a New Question", new_question_path) %></h2>
