<div class="container">
  <h1>Sign Up</h1>

  <%= form_for :user, url: "/signup" do |f| %>
  <p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </p>
  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.submit "Sign Up" %>
  </p>
  <% end %>
</div>
