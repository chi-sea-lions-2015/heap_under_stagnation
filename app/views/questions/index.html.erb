<% if logged_in?%>
<div class="hidden_form">
  <div class="jumbotron">
    <h1>Ask A Question</h1>
    <%= form_for([@question, @user.questions.new], remote: true) do |f| %>
    <%= f.label :title %>
    <%= f.text_area :title, :class => 'question_text_area', :size => "50x1" %><br><br>
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'question_text_area', :size => "50x7"%><br><br>
    <%= f.submit 'Create a New Question', :class => 'btn btn-lg btn-success' %>
    <% end %>
  </div>
</div>
<% end %>
<h1>All Questions</h1>
<div class="row marketing">
  <div class="col-lg-12">
    <div class="question_list">
      <% @questions.each do |question| %>
      <h4><%= link_to("#{question.title}",question_path(question))%></h4>
      <p> <%= question.content %> </p>
      <% end %>
    </div>
  </div>
</div>


