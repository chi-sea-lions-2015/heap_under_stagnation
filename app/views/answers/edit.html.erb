<div class="container">
  <h1>Edit Answer</h1>

  <%= form_for([@question, @answer]) do |f| %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <% if @answer.answerer == @user %>
  <%= form_for([@question, @answer], :method => "delete") do %>
  <%= submit_tag("Delete") %>
  <% end %>
  <% end %>
</div>
